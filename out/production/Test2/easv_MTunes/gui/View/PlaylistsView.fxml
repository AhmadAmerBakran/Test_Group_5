<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="150.0" prefWidth="500.0" styleClass="body_background" stylesheets="@design.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv_MTunes.gui.Controller.PlaylistsView">
   <children>
      <TextField fx:id="txtPlaylistName" layoutX="185.0" layoutY="19.0" prefHeight="30.0" prefWidth="280.0" promptText="Enter the name of the song...." style="-fx-background-radius: 20;" />
      <Label layoutX="14.0" layoutY="19.0" prefHeight="30.0" prefWidth="146.0" text="Playlist Name:" textFill="#e969eb">
         <font>
            <Font name="Arial Black" size="18.0" />
         </font>
      </Label>
      <Button layoutX="341.0" layoutY="84.0" mnemonicParsing="false" onAction="#updatePlaylist" style="-fx-background-radius: 20;" text="Update" />
      <Button layoutX="410.0" layoutY="84.0" mnemonicParsing="false" onAction="#savePlaylist" prefHeight="25.0" prefWidth="55.0" style="-fx-background-radius: 20;" text="Add" />
      <Button layoutX="270.0" layoutY="84.0" mnemonicParsing="false" onAction="#cancelEditting" prefHeight="25.0" prefWidth="55.0" style="-fx-background-radius: 20;" text="Cancel" />
   </children>
</AnchorPane>
